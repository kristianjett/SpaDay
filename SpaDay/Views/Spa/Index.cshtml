@{
}
<form method='post' action="/spa/profile">

    Name:
    <br>
    <input type='text' name='name'>    
    <br>

    Skin type:
    <br>    
    <select name='skintype'>
        <option value='oily'>Oily</option>    
        <option value='combination'>Combination</option>    
        <option value='normal'>Normal</option>    
        <option value='dry'>Dry</option>    
    </select>
    <br>

    Manicure or Pedicure?
    <br>    
    <select name='manipedi'>
        <option value='manicure'>Manicure</option>    
        <option value='pedicure'>Pedicure</option>      
        <option value='both'>Both</option>      
    </select>
    <br>
    
    Color?
    <br>    
    <select name='polishColor'>
        <option value='blue' style="background-color: blue"></option>    
        <option value='green' style="background-color: green"></option>    
        <option value='darkOrange' style="background-color: darkorange"></option>    
             
    </select>
    <br>
    
    <input type='submit' value='Submit' >    
     
</form>

<div id="squareBox">
    <div class="polishSquare blue"></div>
    <div class="polishSquare green"></div>
    <div class="polishSquare orange"></div>
    <div class="polishSquare pink"></div>
</div>